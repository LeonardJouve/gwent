{
	"name": "gwent",
	"type": "module",
	"scripts": {
		"generate": "tsx --tsconfig src/generation/tsconfig.json src/generation",
		"dev:kit": "vite dev --config src/client/vite.config.js",
		"dev:server": "tsx watch --tsconfig src/server/tsconfig.json --env-file=src/server/.env src/server",
		"build:kit": "npm run check && vite build --config src/client/vite.config.ts --emptyOutDir",
		"build:server": "tsup src/server/index.ts --tsconfig src/server/tsconfig.json --format esm --out-dir dist",
		"build": "npm run build:kit && npm run build:server",
		"start": "node dist/index.js",
		"check": "svelte-check --tsconfig src/client/tsconfig.json",
		"lint": "eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@tsconfig/svelte": "^5.0.5",
		"canvas": "^3.2.0",
		"eslint": "^9.18.0",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"image-size": "^2.0.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte5-router": "^3.0.2",
		"tsup": "^8.5.0",
		"tsx": "^4.20.3",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.3.6",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"dependencies": {
		"@hono/node-server": "^1.18.0",
		"hono": "^4.8.10",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"zod": "^4.0.14"
	}
}
